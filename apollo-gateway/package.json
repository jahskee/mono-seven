{
  "name": "apollo-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-prod": "concurrently -k npm:dev:*",
    "start": "concurrently -k npm:dev:*",
    "dev:graphql:pokemons": "nodemon --inspect -r dotenv/config -r esm --watch 'src/**' --ext 'ts,json' --exec 'ts-node ./src/services/pokemons/index.ts'",
    "dev:graphql:gateway": "wait-on tcp:4001 && yarn gateway",
    "gateway": "nodemon --inspect -r dotenv/config -r esm -watch 'src/**' --ext 'ts,json' --exec 'ts-node ./src/index.ts'",
    "docker-build": "docker build -t jahskee/graphql .",
    "docker-run": "yarn docker-build && docker rm -f graphql && docker run --name graphql -p 0.0.0.0:3001:3001 jahskee/graphql",
    "docker-tag": "docker tag jahskee/graphql 458831896152.dkr.ecr.us-east-1.amazonaws.com/graphql",
    "docker-push": "yarn docker-build && yarn docker-tag && docker push 458831896152.dkr.ecr.us-east-1.amazonaws.com/graphql"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.25.1",
    "@apollo/gateway": "^0.29.1",
    "apollo-server-express": "^2.25.2",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.4",
    "wait-on": "^5.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "3.4.3",
    "@types/jest": "26.0.23",
    "@types/node": "^15.14.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "babel-eslint": "10.1.0",
    "concurrently": "^5.3.0",
    "danger": "10.6.4",
    "eslint": "7.25.0",
    "nodemon": "^1.19.4",
    "ts-node": "^10.0.0",
    "typescript": "4.2.4"
  }
}
